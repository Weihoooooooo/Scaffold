<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.jcweiho.scaffold.system.mapper.RoleMapper">

    <!-- 通用查询映射结果 -->
    <resultMap id="BaseResultMap" type="com.jcweiho.scaffold.system.entity.Role">
        <id column="id" property="id"/>
        <result column="create_time" property="createTime"/>
        <result column="update_time" property="updateTime"/>
        <result column="is_del" property="isDel"/>
        <result column="name" property="name"/>
        <result column="name_zh_cn" property="nameZhCn"/>
        <result column="name_zh_hk" property="nameZhHk"/>
        <result column="name_zh_tw" property="nameZhTw"/>
        <result column="name_en_us" property="nameEnUs"/>
        <result column="level" property="level"/>
        <result column="permission" property="permission"/>
    </resultMap>

    <!-- 通用查询结果列 -->
    <sql id="Base_Column_List">
        r.create_time,
        r.update_time,
        r.is_del,
        r.id, r.name, r.level, r.permission,r.name_zh_cn,r.name_zh_hk,r.name_zh_tw,r.name_en_us
    </sql>

    <select id="findSetByUserId" resultType="com.jcweiho.scaffold.system.entity.Role">
        SELECT
        <include refid="Base_Column_List"/>
        FROM
        role r
        LEFT OUTER JOIN users_roles ur on r.id = ur.role_id
        LEFT OUTER JOIN user u on u.id = ur.user_id
        WHERE r.is_del = 0
        AND u.id = #{userId}
    </select>

    <select id="findListByUserId" resultType="com.jcweiho.scaffold.system.entity.Role">
        SELECT
        <include refid="Base_Column_List"/>
        FROM role r
        LEFT JOIN users_roles ur on r.id = ur.role_id
        LEFT JOIN user u on u.id = ur.user_id
        WHERE u.id = #{userId}
        AND r.is_del = 0
    </select>

</mapper>
